@{
    ViewData["Title"] = "Index";
}
<br />
<div class="container row">
    <div class="col-sm-9">
        <h2 class="text-info">Character List</h2>
    </div>
    <div class="col-sm-3">
        <a asp-action="Favourite" asp-controller="People" class="btn btn-info form-control text-center">Favourites</a>
    </div>

    <div class="col-sm-12">
        <table id="D_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Height</th>
                    <th>Mass</th>
                    <th>Skin Color</th>
                    <th>Eye Color</th>
                    <th></th>

                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{

    <script src="~/js/people.js"></script>

}

